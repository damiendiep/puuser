<h1>Simplon</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= User.find(post.user_id).username if post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <% if (user_signed_in? &&current_user.id == post.user_id) || (user_signed_in? && current_user.admin == 1 ) %>
        <td><%= link_to 'Edit', edit_post_path(post)%></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

